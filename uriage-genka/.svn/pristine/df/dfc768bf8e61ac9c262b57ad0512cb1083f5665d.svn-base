<?xml version="1.0"?>
<project name="ug" default="war" basedir=".">

    <property name="dest" value="target/build"/>
    <property name="apt_generated" value="target/apt_generated"/>
    <property name="src" value="src/main/java"/>
    <property name="resources" value="src/main/resources"/>

    <path id="classpath">
        <fileset dir="src/main/webapp/WEB-INF/lib" includes="*.jar"/>
    	<fileset dir="lib" includes="*.jar"/>
    </path>

    <target name="war" depends="clean,copy,compile">

    	<echo>build war</echo>
    	<war destfile="target/build/ug.test.war" webxml="src/main/webapp/WEB-INF/web.xml">
    		<fileset dir="src/main/webapp">
    			<exclude name="src/main/webapp/WEB-INF/lib/sources/**"/>
    		</fileset>
    		<classes dir="src/main/webapp/WEB-INF/classes"></classes>

    	</war>
    </target>

    <target name="clean">
        <delete dir="target" failonerror="false"/>
        <mkdir dir="target"/>
        <mkdir dir="${dest}"/>
        <mkdir dir="${apt_generated}"/>
    </target>

    <target name="compile">
        <javac fork="true" compiler="javac1.6" debug="on" encoding="UTF-8"
            classpathref="classpath" srcdir="${src}, ${resources}" destdir="${dest}" includeantruntime="false">
            <compilerarg line="-s ${apt_generated}" />
        </javac>
    </target>

    <target name="copy">
        <copy todir="${dest}" filtering="true">
            <fileset dir="${resources}">
            </fileset>
        </copy>
    </target>


</project>